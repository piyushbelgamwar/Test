<dependencies>
  <!-- LaunchDarkly Java Server SDK -->
  <dependency>
    <groupId>com.launchdarkly</groupId>
    <artifactId>launchdarkly-java-server-sdk</artifactId>
    <version>7.9.0</version>
  </dependency>
</dependencies>


import com.launchdarkly.sdk.LDClient;
import com.launchdarkly.sdk.LDConfig;
import com.launchdarkly.sdk.LDContext;

public class SimpleFlagCheck {
  public static void main(String[] args) {
    // 1. Initialize the client (your SDK key in place of "YOUR_SDK_KEY")
    LDClient ldClient = new LDClient("YOUR_SDK_KEY", LDConfig.DEFAULT);

    // 2. Create the *minimal* context (just a unique key, no user attributes)
    LDContext ctx = LDContext.create("system");

    // 3. Check the flag
    String flagKey = "my-feature-flag";
    boolean isOn = ldClient.boolVariation(flagKey, ctx, false);

    System.out.println(flagKey + " is " + (isOn ? "ON" : "OFF"));

    // 4. Close the client when the app shuts down
    ldClient.close();
  }
}
